<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    tools:context=".Main3Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15sp"
        android:paddingTop="80dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="190sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/logota" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5sp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12sp"
            android:layout_marginRight="12sp"
            android:text="Iniciar sesión"
            android:fontFamily="@font/font_capriola"
            android:textSize="21sp"
            android:textColor="@color/AndreaBlack" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginRight="5sp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="25sp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:paddingStart="12sp"
            android:paddingEnd="12sp"
            android:hint="Usuario"
            android:drawableStart="@drawable/ic_account_circle_black_24dp"
            android:drawablePadding="15sp"
            android:textColor="@color/AndreaBlack"
            android:textSize="15sp"
            android:fontFamily="@font/font_capriola"
            android:textColorHint="@color/AndreaBlack"
            android:drawableTint="@color/AndreaBlack"
            android:background="@drawable/redondo"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:ems="10"
            android:inputType="textPersonName" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="19sp"
            app:hintEnabled="false"
            app:hintAnimationEnabled="false"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/AndreaBlack"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:textSize="15sp"
                android:drawableStart="@drawable/ic_lock_black_24dp"
                android:drawablePadding="15sp"
                android:paddingStart="12sp"
                android:paddingEnd="12sp"
                android:fontFamily="@font/font_capriola"
                android:background="@drawable/redondo"
                android:drawableTint="@color/AndreaBlack"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:inputType="textPassword"
                android:textColorHint="@color/AndreaBlack"
                android:hint="Contraseña" />

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:layout_marginTop="35sp"
            android:id="@+id/btnLogin"
            android:layout_width="110sp"
            android:layout_height="40sp"
            android:textSize="15sp"
            android:textColor="@color/AndreaBlack"
            android:layout_gravity="center"
            android:fontFamily="@font/font_capriola"
            android:background="@drawable/botonredondo"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:layout_marginBottom="5sp"
            android:text="Entrar" />

    </LinearLayout>

</LinearLayout>